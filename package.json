{
  "private": true,
  "scripts": {
    "build": "babel-node ./scripts/build.js",
    "clean": "rimraf ./packages/*/lib",
    "lint": "eslint . --cache",
    "postinstall": "lerna bootstrap && yarn run clean && yarn run build",
    "test": "jest"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^18.0.0",
    "babel-preset-latest": "^6.16.0",
    "eslint": "^3.12.2",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.8.0",
    "ghooks": "^2.0.0",
    "jest": "^19.0.2",
    "lerna": "^2.0.0-beta.38",
    "lint-staged": "^3.3.1",
    "rimraf": "^2.5.4"
  },
  "config": {
    "ghooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add",
      "jest --bail --findRelatedTests"
    ]
  }
}
